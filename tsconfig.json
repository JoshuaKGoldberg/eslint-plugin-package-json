{
	"compilerOptions": {
		"declaration": true,
		"esModuleInterop": true,
		"module": "nodenext",
		"moduleResolution": "nodenext",
		"noEmit": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"strict": true,
		"target": "ES2024",
		"rewriteRelativeImportExtensions": true,
		"types": [
			"eslint-plugin-markdown",
			"estree",
			"node",
			"semver",
			"sort-object-keys",
			"validate-npm-package-name"
		]
	},
	"include": ["src"]
}
